<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:weightSum="20"
    android:isScrollContainer="false"
    tools:context=".FragmentSearch">



    <LinearLayout

        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginHorizontal="1dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/searchTab"
        android:orientation="horizontal"
        android:isScrollContainer="false"
        android:weightSum="2"
        android:paddingBottom="1dp"
        >


       <RelativeLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:id="@+id/layoutGrid"
           android:background="@drawable/button_shape_stroke"
           >

           <ImageView
               android:layout_centerInParent="true"
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:src="@drawable/grid_green"
               android:id="@+id/ivGrid"
               />

       </RelativeLayout>



        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/layoutLocation"
            android:background="@drawable/button_shape_green"
            >

            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/location_white"
                android:id="@+id/ivLocation"
                />

        </RelativeLayout>

    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/searchTab"
        app:layout_constraintBottom_toTopOf="@id/navigation_bar"
        android:id="@+id/frame"
        />

    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/top_line"
        android:isScrollContainer="false"
        app:layout_constraintBottom_toBottomOf="parent"

        android:weightSum="10"
        android:gravity="center_vertical"
        >


        <ImageView
            android:id="@+id/tree"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:src="@drawable/tree_selected"
            android:layout_weight="2"



            />

        <ImageView
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:src="@drawable/search"
            android:layout_weight="2"

            />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:src="@drawable/plus_logo"

            />


        <ImageView
            android:id="@+id/bell"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_weight="2"
            android:src="@drawable/bell"


            />




        <ImageView
            android:id="@+id/user"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_weight="2"

            android:src="@drawable/user"


            />







    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>