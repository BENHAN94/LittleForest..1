<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@color/background">



    <TextView
        android:id="@+id/askEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/nixgonfonts_b"
        android:text="이메일로 가입하기"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/isNotPublic"
        android:layout_below="@id/askEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nixgonfonts_b"
        android:text="이메일로 로그인을 할 수 있어요."
        android:gravity="center"
        android:textColor="#A3FFFFFF"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/isNotPublic"
        android:layout_width="350sp"
        android:layout_height="35dp"
        android:background="@drawable/button_shape"
        android:layout_centerHorizontal="true"
        android:paddingLeft="15dp"
        android:hint="이메일"
        android:fontFamily="@font/nixgonfonts_b"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:textColor="@color/background"

        />



    <EditText
        android:id="@+id/etPassword"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/etEmail"
        android:layout_width="350sp"
        android:layout_height="35dp"
        android:background="@drawable/button_shape"
        android:layout_centerHorizontal="true"
        android:paddingLeft="15dp"
        android:hint="비밀번호"
        android:fontFamily="@font/nixgonfonts_b"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:textColor="@color/background"

        />

    <TextView
        android:id="@+id/tvPassword"
        android:layout_below="@id/etPassword"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/nixgonfonts_b"
        android:text="6자리 이상, 영문, 숫자, 특수문자를 포함하여 만들어주세요."
        android:gravity="center"
        android:textColor="#A3FFFFFF"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/etNickName"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tvPassword"
        android:layout_width="350sp"
        android:layout_height="35dp"
        android:background="@drawable/button_shape"
        android:layout_centerHorizontal="true"
        android:paddingLeft="15dp"
        android:hint="닉네임"
        android:fontFamily="@font/nixgonfonts_b"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:textColor="@color/background"

        />

    <TextView
        android:id="@+id/tvNickname"
        android:layout_below="@id/etNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/nixgonfonts_b"
        android:text="언제든지 변경할 수 있습니다!"
        android:gravity="center"
        android:textColor="#A3FFFFFF"
        android:textSize="15dp" />




    <EditText
        android:id="@+id/select_birthday"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tvNickname"
        android:layout_width="350sp"
        android:layout_height="35dp"
        android:background="@drawable/button_shape"
        android:layout_centerHorizontal="true"
        android:paddingLeft="15dp"
        android:hint="생일"
        android:fontFamily="@font/nixgonfonts_b"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:textColor="@color/background"

        />

    <TextView
        android:id="@+id/tvBirthday"
        android:layout_below="@id/select_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nixgonfonts_b"
        android:text="생일은 공개되지 않아요."
        android:gravity="center"
        android:textColor="#A3FFFFFF"
        android:textSize="15dp" />



    <Button
        android:id="@+id/btnRegister"

        android:enabled="true"
        android:layout_width="350sp"
        android:layout_height="35dp"

        android:layout_below="@id/tvBirthday"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="가입하기"
        android:fontFamily="@font/nixgonfonts_b"

        android:textColor="@color/disabled"
        android:background="@drawable/button_shape_disable"

        />


</RelativeLayout>