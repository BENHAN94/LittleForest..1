<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    android:id="@+id/updateProfileLayout">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1.0"
        android:id="@+id/profileUpdateUpperBar"
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/nixgonfonts_b"
            android:text="취소"
            android:textColor="@color/background"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:id="@+id/profileUpdateCancel"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nixgonfonts_b"
            android:text="프로필 수정"
            android:textColor="@color/background"
            android:textSize="20sp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/nixgonfonts_b"
            android:text="완료"
            android:textColor="@color/background"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            android:id="@+id/profileUpdateDone"
            />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:src="@drawable/user_circle"
            android:id="@+id/userProfileUpdateProfilePhoto"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nixgonfonts_b"
            android:textColor="@color/background"
            android:text="프로필 사진 바꾸기"
            android:textSize="15sp"
            android:id="@+id/changeProfilePhoto"
            android:layout_below="@+id/userProfileUpdateProfilePhoto"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:weightSum="10"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/updateProfileTag"
            android:orientation="vertical"
            android:weightSum="4"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/nixgonfonts_b"
                android:textColor="@color/background"
                android:textSize="15sp"
                android:text="이름"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/nixgonfonts_b"
                android:textColor="@color/background"
                android:textSize="15sp"
                android:text="유저 이름"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/nixgonfonts_b"
                android:textColor="@color/background"
                android:textSize="15sp"
                android:text="직업"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/nixgonfonts_b"
                android:textColor="@color/background"
                android:textSize="15sp"
                android:text="소개"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:id="@+id/updateProfileContents"
            android:orientation="vertical"
            android:weightSum="4"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/nixgonfonts_b"
                android:textColor="@color/background"
                android:textSize="15sp"
                android:text="이름"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/nixgonfonts_b"
                android:textColor="@color/background"
                android:textSize="15sp"
                android:text="유저 이름"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/nixgonfonts_b"
                android:textColor="@color/background"
                android:textSize="15sp"
                android:text="직업"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/nixgonfonts_b"
                android:textColor="@color/background"
                android:textSize="15sp"
                android:hint="소개"
                android:textColorHint="@color/navi"
                android:inputType="textNoSuggestions"
                android:background="@drawable/button_shape"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                />



        </LinearLayout>


    </LinearLayout>



</LinearLayout>