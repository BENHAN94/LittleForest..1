<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FragmentTree"
    android:id="@+id/swipeLayout"
    android:focusableInTouchMode="true"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:fontFamily="@font/nixgonfonts_b"
            android:textColor="@color/background"
            android:gravity="center"
            android:text="환영합니다!"
            android:id="@+id/welcome"
            android:textSize="30sp"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nixgonfonts_b"
            android:textColor="@color/background"
            android:gravity="center"
            android:layout_below="@id/welcome"
            android:text="여러분의 숲을"
            android:id="@+id/welcome2"
            android:visibility="gone"
            android:textSize="30sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nixgonfonts_b"
            android:textColor="@color/background"
            android:gravity="center"
            android:layout_below="@id/welcome2"
            android:text="모두와 나눠보세요!"
            android:id="@+id/welcome3"
            android:textSize="30sp"
            android:visibility="gone"
            />


<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/treeRecyclerView"
    android:layout_above="@id/navigation_bar"

    />

    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/top_line"
        android:isScrollContainer="false"
        android:weightSum="10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >


        <ImageView
            android:id="@+id/tree"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:src="@drawable/tree_selected"
            android:layout_weight="2"



            />

        <ImageView
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:src="@drawable/search"
            android:layout_weight="2"

            />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:src="@drawable/plus_logo"

            />


        <ImageView
            android:id="@+id/bell"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_weight="2"
            android:src="@drawable/bell"


            />




        <ImageView
            android:id="@+id/user"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_weight="2"

            android:src="@drawable/user"


            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"

            android:layout_marginBottom="0dp"
            android:id="@+id/writeCommentContainer"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:background="@drawable/top_line"
            android:weightSum="20"
            android:visibility="gone"
            >


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginLeft="12dp"
                android:id="@+id/myProfilePhoto"
                android:layout_weight="1.5"
                android:background="@color/white"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_weight="15"
                android:fontFamily="@font/nixgonfonts_b"
                android:id="@+id/writeComment"
                android:textCursorDrawable="@drawable/cursor_default_color"
                android:background="@drawable/top_line"
                android:textSize="20sp"
                android:inputType="textNoSuggestions"
                android:textColor="@color/default_text"
                android:hint="댓글 달기..."
                android:imeOptions="actionDone"

                />





        </LinearLayout>

    </RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>